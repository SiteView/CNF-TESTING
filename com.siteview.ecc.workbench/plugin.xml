<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Commit Category"
            id="com.siteview.ecc.workbench.commands.category">
      </category>
      <command
            name="Commit Command"
            categoryId="com.siteview.ecc.workbench.commands.category"
            id="com.siteview.ecc.workbench.commands.commitCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.siteview.ecc.workbench.commands.commitCommand"
            class="com.siteview.ecc.workbench.handlers.CommitHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.siteview.ecc.workbench.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Commit Menu"
               mnemonic="M"
               id="com.siteview.ecc.workbench.menus.commitMenu">
            <command
                  commandId="com.siteview.ecc.workbench.commands.commitCommand"
                  mnemonic="S"
                  id="com.siteview.ecc.workbench.menus.commitCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.siteview.ecc.workbench.toolbars.commitToolbar">
            <command
                  commandId="com.siteview.ecc.workbench.commands.commitCommand"
                  icon="icons/sample.gif"
                  tooltip="Commit to backend"
                  id="com.siteview.ecc.workbench.toolbars.commitCommand">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=additions">
         <command
               commandId="com.siteview.ecc.workbench.commands.commitCommand"
               helpContextId="Commit to backend"
               icon="icons/sample.gif"
               label="SiteView Commit"
               mnemonic="C"
               style="push"
               tooltip="Commit to backend">
         </command>
      </menuContribution>
   </extension>

</plugin>
